// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
   binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @default(cuid()) @id
  name          String?
  email         String?   @unique
  password      String?
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @updatedAt @map(name: "updated_at")
  @@map(name: "users")
}



model Good {
  id            Int      @default(autoincrement()) @id
  name          String
  description   String
  price         Float
  discount      Int
  photo         File? @relation(fields: [photoId], references: [id])
  photoId       Int? @unique
  category      Category? @relation(fields: [categoryId], references: [id])
  categoryId    Int
}

model Category {
  id            Int      @default(autoincrement()) @id
  name          String
  photo         File? @relation(fields: [photoId], references: [id])
  photoId       Int?  @unique
  good          Good[]
}

model File {
  id            Int      @default(autoincrement()) @id
  originalFilename  String
  mimetype      String
  filename      String
  path          String
  url           String    @default("")
  size          Decimal
  good          Good?
  category      Category?
}

model Todo {
  id             Int      @default(autoincrement()) @id
  title          String
  description    String
  status         Boolean
}

model UserToken {
     id             Int      @default(autoincrement()) @id
     token          String   @unique
     userId         Int      @unique
}
